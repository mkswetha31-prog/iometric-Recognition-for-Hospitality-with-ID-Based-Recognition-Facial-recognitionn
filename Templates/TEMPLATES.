MATCHFACE .HTML

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Match Face - Capture & Search</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      padding: 20px;
      background: #f0f0f0;
    }
    #displayBox {
      width: 320px;
      height: 240px;
      margin: 0 auto;
      border: 3px solid #007bff;
      border-radius: 10px;
      overflow: hidden;
    }
    video, img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    #captureBtn {
      margin-top: 15px;
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 6px;
    }
    input[type="text"] {
      padding: 8px;
      width: 220px;
      border-radius: 5px;
      border: 1px solid #ccc;
    }
    button {
      margin: 10px;
    }
    #result {
      margin-top: 25px;
      font-size: 18px;
      color: green;
    }
    #thumbBox {
      margin-top: 15px;
    }
    #thumbBox img {
      width: 120px;
      height: 90px;
      border: 2px solid #007bff;
      border-radius: 8px;
      object-fit: cover;
    }
  </style>
</head>
<body>
  <h2>Facial recognition- Capture & Search Patient By Id</h2>

  <div id="displayBox">
    <video id="video" autoplay playsinline></video>
    <img id="capturedImage" style="display:none;" />
  </div>

  <button id="captureBtn">Capture Photo</button>

  <!-- Captured photo thumbnail display below -->
  <div id="thumbBox" style="display: none;">
    <h4>Captured Photo:</h4>
    <img id="thumbImage" src="" alt="Captured Thumbnail" />
  </div>

  <h3>OR Search Patient by ID</h3>
  <input type="text" id="idInput" placeholder="Enter Patient ID Card" />
  <button onclick="searchById()">Search</button>

  <div id="result"></div>

  <script>
    const video = document.getElementById('video');
    const capturedImage = document.getElementById('capturedImage');
    const thumbImage = document.getElementById('thumbImage');
    const thumbBox = document.getElementById('thumbBox');
    const captureBtn = document.getElementById('captureBtn');
    const resultDiv = document.getElementById('result');

    async function startWebcam() {
      try {
        const stream = await navigator.mediaDevices.getUserMedia({ video: true });
        video.srcObject = stream;
      } catch (err) {
        alert('Webcam error: ' + err.message);
      }
    }

    startWebcam();

    captureBtn.addEventListener('click', () => {
      const canvas = document.createElement('canvas');
      canvas.width = video.videoWidth;
      canvas.height = video.videoHeight;
      const context = canvas.getContext('2d');
      context.drawImage(video, 0, 0, canvas.width, canvas.height);
      const imageData = canvas.toDataURL('image/png');

      capturedImage.src = imageData;
      video.style.display = 'none';
      capturedImage.style.display = 'block';

      // Show thumbnail below
      thumbImage.src = imageData;
      thumbBox.style.display = 'block';

      fetch('/match-face', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ image: imageData })
      })
      .then(res => res.json())
      .then(data => displayResult(data))
      .catch(err => {
        resultDiv.innerHTML = `<p style="color:red;">Error: ${err}</p>`;
      });
    });

    function searchById() {
      const id = document.getElementById('idInput').value.trim();
      if (!id) {
        alert("Please enter an ID number.");
        return;
      }

      fetch('/search-by-id', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id_card: id })
      })
      .then(response => response.json())
      .then(data => displayResult(data))
      .catch(err => {
        resultDiv.innerHTML = `<p style="color:red;">Error: ${err}</p>`;
      });
    }

    function displayResult(data) {
      if (data.success) {
        resultDiv.innerHTML = `
          <h3>‚úÖ Patient Found:</h3>
          <p><strong>Name:</strong> ${data.patient.name}</p>
          <p><strong>Age:</strong> ${data.patient.age}</p>
          <p><strong>DOB:</strong> ${data.patient.dob}</p>
          <p><strong>ID Card:</strong> ${data.patient.id_card}</p>
          <p><strong>Blood Group:</strong> ${data.patient.blood}</p>
        `;
      } else {
        resultDiv.innerHTML = `<p style="color:red;">${data.message || "‚ùå No patient found."}</p>`;
      }
    }
  </script>
</body>
</html>

